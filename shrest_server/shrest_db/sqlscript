CREATE TABLE customer_contact_history('contact_id' INTEGER PRIMARY KEY, 'customer_id' int, 'contact_type' char(60), 'description' varchar(200));

CREATE TABLE customer_transactions('transact_id' INTEGER PRIMARY KEY, 'customer_id' int, 'buying' bool, 'prodcut' varchar(60), 'amonut' float, 'description' varchar(200));


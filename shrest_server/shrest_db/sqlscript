CREATE TABLE company(
	company_id INT PRIMARY KEY,
	name	varchar(100), 
	address	varchar(100), 
	phone	varchar(20), 
	fax	varchar(20)
	parent_company INT,
	industry_type	INT, 
	who_referred INT, 
	annual_revenue float, 
	currency_id INT, 
	credit_limit	float, 
	credit_rating	INT, 
	time_zone	INT, 
	payment_terms	INT);

CREATE TABLE employee(
	employee_id int PRIMARY KEY,
	'firstName' char(20), 
	'lastName' char(20), 
	'age' int, 
	'address' varchar(100)
	'mobile_phone' char(20), 
	'office_phone' char(20),  
	'home_phone' char(20), 
	'email' varchar(32),
	'job_title' varchar(32),
	'department_id' int,
	'reports_to' int  nvarchar(100)
);


CREATE TABLE contact(
	'contact_id' INTEGER PRIMARY KEY,
	'firstName' char(20), 
	'lastName' char(20), 
	'age' int, 
	'address' varchar(100)
	'mobile_phone' char(20), 
	'office_phone' char(20),  
	'home_phone' char(20), 
	'fax' char(20),
	'email' varchar(32),
	'job_title' varchar(32),
	'company_id' int FOREIGN KEY REFERENCES company(company_id),
	'when_met' Date,
	'where_met' varchar(100),
	'birthday' Data,
	'married' BOOL,
	'children' int,
	'time_zone' int FOREIGN KEY REFERENCES time_zone(zone_id),
	'extra_info' varchar(100)
);

#activities: email, phone, fax, meet_inperson, social_event, buying, selling, customer_support
CREATE TABLE activity_code(
	'activity_id' INT PRIMARY KEY,
	'description' nvarchar(100)
);

CREATE TABLE activity_event(
	'event_id'  INT  PRIMARY KEY,
	'activity'  INT FOREIGN KEY REFERENCES activity_code(activity_id),
	'contact_id' INT FOREIGN KEY REFERENCES contact(contact_id),
	'who_contacts' INT FOREIGN KEY REFERENCES employee(employee_id),
	'when_created' Date,
	'note'	varchar(100)
);



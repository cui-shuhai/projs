<table id="order_search" >
<tr>
<td colspan="1" > <label for=" order_id"> order_id:</lable</td>
<td colspan="1" > <label for=" customer_id"> customer_id:</lable</td>
<td colspan="1" > <label for=" product_id"> product_id:</lable</td>
<td colspan="1" > <label for=" order_amount"> order_amount:</lable</td>
<td colspan="1" > <label for=" order_date"> order_date:</lable</td>
<td colspan="1" > <label for=" order_status"> order_status:</lable</td>
<td colspan="1" ></td>
</tr> <tr>

<td><input type="text" name=" order_id" id="txt order_idAutoComplete" list=" order_id_data_list" value="" > <datalist id=" order_id_ata_list"> </datalist></td>
<td><input type="text" name=" customer_id" id="txt customer_idAutoComplete" list=" customer_id_data_list" value="" > <datalist id=" customer_id_ata_list"> </datalist></td>
<td><input type="text" name=" product_id" id="txt product_idAutoComplete" list=" product_id_data_list" value="" > <datalist id=" product_id_ata_list"> </datalist></td>
<td><input type="text" name=" order_amount" id="txt order_amountAutoComplete" list=" order_amount_data_list" value="" > <datalist id=" order_amount_ata_list"> </datalist></td>
<td><input type="text" name=" order_date" id="txt order_dateAutoComplete" list=" order_date_data_list" value="" > <datalist id=" order_date_ata_list"> </datalist></td>
<td><input type="text" name=" order_status" id="txt order_statusAutoComplete" list=" order_status_data_list" value="" > <datalist id=" order_status_ata_list"> </datalist></td>
<td><input type="submit"   name="submit" value="Search"></td>
